set srcpath src/
set sqlpath sql/

set usingforeignkeys true
set dbtype mysql
set dbuser root
-set dbpassword 
set dbserver localhost
set dbport 3306
set dbname foo

set modelpackage foo.model
set usingannotations true

set controllerpackage foo.controller
set controllerclass BasicController
set controllerformat %sController

set parserpackage foo.parser
set parserformat %sParser

set entitymodelpackage foo.entitymodels
set entitymodelformat %sEntityModel
set entitymodelfactoryclass EntityModelFactory

begin entity FooProp
	varchar(40) prop1 "Prop1"
	varchar(40) prop2 "Prop2"
	varchar(40) prop3 "Prop3"
	tostring Prop1 = %prop1, Prop2 = %prop2
end entity

begin entity Foo
	varchar(50) fooVarchar ""
	date fooDate 
	numeric(9,2) fooNumeric 1234567.89
	char(30) fooChar "foo"
	onetoone FooProp
	tostring %fooVarchar - %fooDate - %fooNumeric - %fooChar
end entity

begin entity Bar
	varchar(20) barVarchar "bar"
	int barInt 45
	manytoone Foo
	tostring %barVarchar Nr %barInt
end entity

begin entity FooBar
	varchar(30) foobarstring "0123456789"
	manytoone Foo
	manytoone Bar myBar
	tostring this foobars name is %foobarstring
end entity

create sqlcreate
create hibernate
create javamodels
create javaparser
create javacontroller
create javaentitymodels

